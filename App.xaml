<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:Food_maui.Converters;assembly=Food_maui"
             xmlns:local="clr-namespace:Food_maui"
             x:Class="Food_maui.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
                <ResourceDictionary Source="Resources/Styles/AppStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <converters:MultiplyConverter x:Key="MultiplyConverter" />
            <converters:BooleanToColorConverter x:Key="BooleanToColorConverter" />
            <converters:BooleanToColorConverter x:Key="BooleanToEditConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
